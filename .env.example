# Shelly Environment Configuration
# Copy this file to .env and fill in your values

# Required: Anthropic API key for Claude AI
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Required: GitHub personal access token with repo scope
GITHUB_TOKEN=your-github-token-here

# Optional: Claude model to use (default: claude-sonnet-4-20250514)
MODEL=claude-sonnet-4-20250514

# Database Configuration (defaults work with devcontainer)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shelly
DB_USER=shelly
DB_PASSWORD=shelly_dev_password

# Redis Configuration (default works with devcontainer)
REDIS_URL=redis://localhost:6379

# Server Configuration
PORT=8081

# Development Settings
NODE_ENV=development

# Optional: Test repository for development mode testing
TEST_REPO=owner/repo-name

# Optional: Notification Channel Configuration
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email
# SMTP_PASS=your-password
# SMTP_FROM=shelly@example.com

# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
# SLACK_BOT_TOKEN=xoxb-...
